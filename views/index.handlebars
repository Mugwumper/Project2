<body id="body" class="dark-mode">
  <button type="button" name="dark_light" onclick="toggleDarkLight()" title="Toggle dark/light mode">ðŸŒ›</button>

  <div id="home">
    <div class="container">
      <div class="row">
        <div class="col s6 offset-2">
          <h1>{{msg}}</h1>
          <h2>Dream Journal</h2>
          <form class="clearfix mb-4" action="POST">
            <div class="form-group">
              <label for="journal-text">Title</label>
              <input type="text" id="journal-text" class="form-control" aria-describedby="journal-text"
                placeholder="Enter Dream Title (optional)" />
            </div>
            <div class="input-field col s6">
              <label for="entry-description">Entry Description</label>
              <textarea class="materialize-textarea" id="entry-description"
                placeholder="Enter Entry Description"></textarea>
            </div>
            <br>
            <div class="row"></div>
            <div class="row">
              <button id="submit" class="btn btn-primary float-right">Submit</button>
            </div>
          </form>
          <div>
            <h3>Journal Entries:</h3>
            <ul id="journal-list" class="list-group">
              {{#each examples}}
              <li data-id="{{this.id}}" class="list-group-item">
                <a href="jounral/{{this.id}}">{{this.text}}</a>
                <button class="btn btn-danger float-right delete">ï½˜</button>
              </li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

<script type="text/javascript">
  function toggleDarkLight() {
    var body = document.getElementById("body");
    var currentClass = body.className;
    body.className = currentClass == "dark-mode" ? "light-mode" : "dark-mode";
  }
</script>