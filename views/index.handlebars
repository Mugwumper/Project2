<div id="home">
  <div class="container">
    <div class="row">
      <div class="col s10 offset-2">
        <h1>{{msg}}</h1>
        <h2>Dream Journal</h2>
        <div class="section">
          <form class="clearfix mb-4" action="POST">
            <div class="form-group">
              <label for="journal-title">Title</label>
              <input type="text" id="journal-title" class="form-control" aria-describedby="journal-title"
                placeholder="Enter Dream Title (optional)" />
              <div class="input-field col s12">
                <label for="journal-description">Dream Description</label>
                <textarea class="materialize-textarea" id="journal-description" placeholder="Enter Dream Description"></textarea>
              </div>              
              <div class="input-field col s6">
                <label for="tag-name">tag name</label>
                <textarea class="materialize-textarea" id="journal-description" placeholder="Enter Dream Description"></textarea>
              </div>

              <button id="submit" class="btn btn-primary float-right">Submit</button>
            </div>
          </form>
        </div>


        <br><br>  <!-- temp -->

        <h3>Journal Entries:</h3>
        <ul id="journal-list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="jounral/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>