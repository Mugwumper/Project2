<div id="home">
  <div class="container">

    <div class="row" id="journal">
      <h1>{{msg}}</h1>
      <h2>Dream Journal</h2>
    </div>

    <form class="clearfix mb-4" action="POST">

      <div class="row">
        <div class="form-group">
          <label for="journal-title">Title</label>
          <input type="text" id="journal-title" class="form-control" aria-describedby="journal-title"
            placeholder="Enter Dream Title (optional)" />
        </div>
      </div>

      <div class="row">
        <label for="journal-description">Dream Description</label>
        <textarea class="form-control" id="journal-description" placeholder="Enter Dream Description"></textarea>
      </div>

      <div class="row">
        <div class="form-group">
          <div class="col s4">
            <input class="tags" type="text" placeholder="Enter tag" />
          </div>
          <div class="col s2">
            <a id="addChipBtn" class="waves-effect waves-light btn"><i class="material-icons">add</i></a>
          </div>
          <div class="col s4">
            <div id="lg-Chips"></div>
          </div>
        </div>
      </div>
      <div class="row">
        <button class="btn waves-effect waves-light modal-trigger" id="submit" type="submit" name="action"
          href="#modal1">Submit
          <i class="material-icons right">send</i>
        </button>
      </div>
    </form>
    <div id="modal1" class="modal">
      <div class="modal-content">
        <h4>Your dream entry was submitted!</h4>
      </div>
      <div class="modal-footer">
        <a href="#!" class="modal-close waves-effect waves-green btn">OK</a>
      </div>
    </div>
    <div id="loginModal" class="modal">
      <div class="modal-content">
        <div class="row">
          <div class="col s8">
            <h4>LOGIN</h4>
          </div>
          <div class="col s4">
            <p> Don't have an account yet?</p>
          </div>
        </div>
        <div class="row">
          <button id="createLink" class="modal-close waves-effect waves-green btn" style="float:right">Create
            Account</button>
        </div>
      </div>
      <div id="loginForm">
        <form class="col s12">
          <div class="row">
            <div class="input-field col s6">
              <input placeholder="Username" id="username" type="text" class="validate">
              <label for="username">Username</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s6">
              <input id="password" type="text" class="validate">
              <label for="password">Password</label>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <a href="#!" class="modal-close waves-effect waves-green btn" id="loginBtn">LOGIN</a>
      </div>
    </div>
    <div id="createAccountModal" class="modal">
      <div class="modal-content">
        <h4>Create an Account</h4>
      </div>
      <div id="createForm">
        <form class="col s12">
          <div class="row">
            <div class="input-field col s6">
              <input placeholder="Username" id="username" type="text" class="validate">
              <label for="username">Username</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s6">
              <input id="password" type="text" class="validate">
              <label for="password">Password</label>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <a href="#!" class="modal-close waves-effect waves-green btn" id="createAccount">CREATE</a>
      </div>
    </div>
  </div>
</div>

<script src="/js/index.js"></script>