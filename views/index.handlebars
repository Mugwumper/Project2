<body id="body" class="dark-mode">
  <button type="button" name="dark_light" onclick="toggleDarkLight()" title="Toggle dark/light mode">ðŸŒ›</button>
<div id="home">
  <div class="container">
    <div class="row">
      <div class="col s8 offset-2">
        <h1>{{msg}}</h1>
        <h2>Dream Journal</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="journal-title">Title</label>
            <input type="text" id="journal-title" class="form-control" aria-describedby="journal-title"
              placeholder="Enter Dream Title (optional)" />
          </div>
          <div class="input-field col s12">
            <label for="journal-description">Dream Description</label>
            <textarea class="form-control" id="journal-description" placeholder="Enter Dream Description"></textarea>
          </div>
          <div class="form-group">
            <label for="tags">Tags</label>
            <textarea class="materialize-textarea" id="tags" placeholder="Enter Tags"></textarea>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

<script type="text/javascript">
  function toggleDarkLight() {
    var body = document.getElementById("body");
    var currentClass = body.className;
    body.className = currentClass == "dark-mode" ? "light-mode" : "dark-mode";
  }
</script>